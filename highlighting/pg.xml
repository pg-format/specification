<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE language
[
  <!ENTITY spaces " \t">
  <!ENTITY reserved "\x00-\x20&lt;&gt;&quot;{}\\^`|">
  <!ENTITY unquotedStart "[^&reserved;#:',]">
  <!ENTITY unquotedNext "[^&reserved;]">
  <!ENTITY unquoted "&unquotedStart;&unquotedNext;*">
  <!ENTITY idStart "(&unquotedStart;|&quot;|&apos;)">
]>
<language name="pg" alternativeNames="PG format" kateversion="5.0" section="Scripts" extensions="*.pg" casesensitive="1" author="Jakob VoÃŸ" license="CC0">
  <highlighting>
    <list name="Boolean">
      <item>true</item>
      <item>false</item>
    </list>

    <contexts>
      <context name="Start" lineEndContext="#stay">
        <!-- ignore empty lines -->
        <RegExpr String="^[&spaces;]*(#.*)?$" attribute="CommentStyle" column="0"/>
        <!-- start of the first statement -->
        <RegExpr String="^[^&spaces;]" columns="0" lookAhead="true" context="Statement"/>
        <!-- document must not start with a continuation line -->
        <RegExpr String=".+" attribute="Error"/>
      </context>

      <context name="Statement" lineEndContext="#stay" fallthroughContext="Error" fallthrough="true">
        <RegExpr String="&idStart;" context="FirstIdentifier" lookAhead="true" />
      </context>

      <context name="FirstIdentifier" lineEndContext="StartLine" fallthroughContext="Elements" fallthrough="true">>
        <RegExpr String="&idStart;" context="Identifier" lookAhead="true" />
      </context>

      <context name="Error">
        <RegExpr String="." attribute="Error" context="#pop" />
      </context>

      <context name="Elements" lineEndContext="StartLine" fallthroughContext="Error" fallthrough="true">
        <RegExpr String="\s+" attribute="Space" contex="#stay" />

        <Detect2Chars char="-" char1="-" attribute="DirectionStyle" contex="Identifier" />
        <Detect2Chars char="-" char1="&gt;" attribute="DirectionStyle" contex="Identifier" />

        <RegExpr String="&idStart;" context="Identifier" lookAhead="true" />

        <RegExpr String=":[&spaces;]*&unquoted;" attribute="Label" />
        <RegExpr String=":[&spaces;]*&quot;" attribute="Label" context="DoubleQuotedLabel" />
        <RegExpr String=":[&spaces;]*&apos;" attribute="Label" context="SingleQuotedLabel" />

        <RegExpr String="#.*" attribute="CommentStyle" context="StartLine" />

        <!-- TODO: also after property key -->
        <DetectChar char="," attribute="CommaStyle" contex="PropertyValue" />
      </context>

      <context name="StartLine" lineEndContext="#stay" fallthroughContext="Error" fallthrough="true">
        <!-- ignore empty lines -->
        <RegExpr String="^[&spaces;]*(#.*)?$" attribute="CommentStyle" column="0"/>
        <!-- start of the first statement -->
        <RegExpr String="^[^&spaces;]" columns="0" lookAhead="true" context="Statement"/>
        <!-- continuation line -->
        <RegExpr String="[&spaces;]+" attribute="Space" context="Elements"/>
      </context>

      <context name="Identifier" fallthroughContext="Elements" fallthrough="true">
        <IncludeRules context="QuotedString" />
        <RegExpr String="&unquoted;" attribute="Identifier" contex="#stay" />
      </context>

      <context name="DoubleQuotedLabel" lineEndContext="#stay" attribute="Label" noIndentationBasedFolding="1">
        <DetectChar char="&quot;"  context="#pop" attribute="Label" />
        <DetectChar char="\"       context="StringEscape" lookAhead="1" />
      </context>
      <context name="SingleQuotedLabel" lineEndContext="#stay" attribute="Label" noIndentationBasedFolding="1">
        <DetectChar char="&apos;"  context="#pop" attribute="Label" />
        <DetectChar char="\"       context="StringEscape" lookAhead="1" />
      </context>    

      <context name="QuotedString">
        <DetectChar char="&quot;" context="DoubleQuotedString" attribute="StringStyle" />
        <DetectChar char="&apos;" context="SingleQuotedString" attribute="StringStyle" />
      </context>
      <context name="DoubleQuotedString" lineEndContext="#stay" attribute="StringStyle" noIndentationBasedFolding="1">
        <DetectChar char="&quot;"  context="#pop" attribute="StringStyle" />
        <DetectChar char="\"       context="StringEscape" lookAhead="1" />
      </context>
      <context name="SingleQuotedString" lineEndContext="#stay" attribute="StringStyle" noIndentationBasedFolding="1">
        <DetectChar char="&apos;"  context="#pop" attribute="StringStyle" />
        <DetectChar char="\"       context="StringEscape" lookAhead="1" />
      </context>    
      <context name="StringEscape" lineEndContext="#stay">
        <RegExpr String="\\(?:[&quot;&apos;\\/bfnrt]|u[0-9a-fA-f]{4})" context="#pop" attribute="EscapeSequenceStyle" />
        <RegExpr String="\\(u[0-9a-fA-f]+|.)?" context="#pop" attribute="Error" />
      </context>

      <context name="PropertyValue">
        <RegExpr String=".*" attribute="Comment" context="#pop" />

        <IncludeRules context="QuotedString" />
        <keyword String="Boolean" context="#pop" attribute="BooleanStyle" />
        <RegExpr String="-?\b([1-9][0-9]*\.[0-9]+(?:[eE][+-]?[0-9]+)?)" context="#pop" attribute="FloatStyle" />
        <RegExpr String="-?\b(0\b|[1-9][0-9]*(?:[eE][+-]?[0-9]+)?)" context="#pop" attribute="DecimalStyle" />
        <RegExpr attribute="UnquotedValueStyle" contex="#pop" String="&unquotedStart;[^&reserved;,]*" />
      </context>

    </contexts>
    <itemDatas>
      <itemData name="Error"                defStyleNum="dsError" />
      <itemData name="Space"                defStyleNum="dsNormal" />
      <itemData name="Identifier"           defStyleNum="dsVerbatimString" />
      <itemData name="Label"                defStyleNum="dsAttribute" />
      <itemData name="DirectionStyle"       defStyleNum="dsOperator" />
      <itemData name="CommaStyle"           defStyleNum="dsOperator" />
      <itemData name="StringStyle"          defStyleNum="dsString" />
      <itemData name="UnquotedValueStyle"   defStyleNum="dsString" />
      <itemData name="EscapeSequenceStyle"  defStyleNum="dsSpecialChar" />
      <itemData name="DecimalStyle"         defStyleNum="dsDecVal" />
      <itemData name="FloatStyle"           defStyleNum="dsFloat" />
      <itemData name="BooleanStyle"         defStyleNum="dsKeyword" />
      <itemData name="CommentStyle"         defStyleNum="dsComment" />
    </itemDatas>
  </highlighting>
  <general>
    <comments>
      <comment name="singleLine" start="#" position="afterwhitespace"/>
    </comments>
    <emptyLines>
      <emptyLine regexpr="\s+"/>
      <emptyLine regexpr="\s*#.*"/>
    </emptyLines>
    <keywords casesensitive="true"/>
    <folding indentationsensitive="true"/>
  </general>
</language>
